<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece04"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="br.unicid.livraria.Views.DadosDoUsuarioEdicao">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/saraiva" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Nome:" />

                    <EditText
                        android:id="@+id/txtNOME"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1" />
                </TableRow>


                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Email:" />

                    <EditText
                        android:id="@+id/txtEMAIL"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:inputType="textEmailAddress" />
                </TableRow>


                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Telefone:" />

                    <EditText
                        android:id="@+id/txtFONE"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:inputType="phone" />
                </TableRow>


                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="EndereÃ§o:" />

                    <EditText
                        android:id="@+id/txtENDERECO"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Complemento:" />

                    <EditText
                        android:id="@+id/txtCOMPLEMENTO"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Bairro:" />

                    <EditText
                        android:id="@+id/txtBAIRRO"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1" />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Cidade:" />

                    <EditText
                        android:id="@+id/txtCIDADE"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="UF:" />

                    <EditText
                        android:id="@+id/txtUF"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1" />
                </TableRow>


                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="CEP:" />

                    <EditText
                        android:id="@+id/txtCEP"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:inputType="number" />
                </TableRow>

                <TableRow>


                    <Button
                        android:id="@+id/btnIMAGEMS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:onClick="BuscarImagem"
                        android:text="Adicionar imagem"
                        android:visibility="gone" />
                </TableRow>

                <TableRow>

                    <ImageButton
                        android:id="@+id/btnIMAGEMC"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:background="@android:color/transparent"
                        android:onClick="BuscarImagem"
                        android:visibility="gone" />

                </TableRow>

                <TableRow>

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:onClick="AlterarDados"
                        android:text="Alterar Dados" />

                </TableRow>


                <TableRow android:visibility="gone">

                    <EditText
                        android:id="@+id/txtImagem"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:onClick="" />

                </TableRow>


            </TableLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
