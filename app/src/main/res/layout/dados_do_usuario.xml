<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece04"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="br.unicid.livraria.Views.DadosDoUsuario">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/saraiva" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgImagem"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cadastrousuario" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtNOME"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Nome"
                        android:textAppearance="@android:style/TextAppearance.Theme" />


                    <TextView
                        android:id="@+id/txtEMAIL"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:text="email"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/txtFONE"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:text="telefone"
                        android:textStyle="italic" />


                </LinearLayout>


            </LinearLayout>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="text"
                android:paddingTop="1dp"
                android:text="" />

            <TextView
                android:id="@+id/txtENDERECO"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="5dp"
                android:text="EndereÃ§o"
                android:textStyle="italic" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="text"
                android:paddingTop="1dp"
                android:text="" />


            <TextView
                android:id="@+id/txtCOMPLEMENTO"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="5dp"
                android:text="Complemento"
                android:textStyle="italic" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="text"
                android:paddingTop="1dp"
                android:text="" />

            <TextView
                android:id="@+id/txtBAIRRO"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="5dp"
                android:text="Bairro"
                android:textStyle="italic" />

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="text"
                android:paddingTop="1dp"
                android:text="" />


            <TextView
                android:id="@+id/txtCIDADE"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="5dp"
                android:text="Cidade"
                android:textStyle="italic" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="text"
                android:paddingTop="1dp"
                android:text="" />

            <TextView
                android:id="@+id/txtESTADO"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="5dp"
                android:text="Estado"
                android:textStyle="italic" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="text"
                android:paddingTop="1dp"
                android:text="" />


            <TextView
                android:id="@+id/txtCEP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="5dp"
                android:text="CEP"
                android:textStyle="italic" />


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1">

                <TableRow>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:background="@android:color/transparent"
                        android:onClick="alterarDados"
                        android:text="Alterar Dados" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:background="@android:color/transparent"
                        android:onClick="alterarSenha"
                        android:text="Alterar Senha" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
