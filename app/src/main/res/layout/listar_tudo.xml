<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece04"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.unicid.livraria.Views.ListarTudo">


    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/saraiva" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:collapseColumns="2">


            <TableRow>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:onClick="ListarLivrosTodos"
                    android:src="@drawable/catalogolivros" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="1"
                    android:layout_marginBottom="10dp"
                    android:gravity="fill_vertical"
                    android:text="Todos Os Livros"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:onClick="ListarLivrosCategoria"
                    android:src="@drawable/catalogolivros" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="1"
                    android:layout_marginBottom="10dp"
                    android:gravity="fill_vertical"
                    android:text="Livros por Categoria"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:onClick="ListarLivros"
                    android:src="@drawable/catalogolivros" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="1"
                    android:layout_marginBottom="10dp"
                    android:gravity="fill_vertical"
                    android:text="Pesquisar Livros"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>

    </ScrollView>
</LinearLayout>
